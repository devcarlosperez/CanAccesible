    "swagger-ui-express": "^5.0.1",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "postman-to-openapi": "^1.2.0",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.0.1"
  }
}
