{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "test:setup": "npm run openldap:test:up && npm run db:create:test && npm run db:migrate:test && npm run db:seed:test",
    "test:teardown": "npm run openldap:test:down && npm run db:drop:test",
    "openldap:test:up": "docker compose -f ../docker-compose.test.yml up -d openldap-test",
    "openldap:test:down": "docker compose -f ../docker-compose.test.yml down",
    "db:create:test": "cross-env NODE_ENV=test npx sequelize-cli db:create",
    "db:drop:test": "cross-env NODE_ENV=test npx sequelize-cli db:drop",
    "db:migrate:test": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "db:seed:test": "cross-env NODE_ENV=test npx sequelize-cli db:seed:all",
    "db:create:dev": "cross-env NODE_ENV=development npx sequelize-cli db:create",
    "db:drop:dev": "cross-env NODE_ENV=development npx sequelize-cli db:drop",
    "db:migrate:dev": "cross-env NODE_ENV=development npx sequelize-cli db:migrate",
    "db:seed:dev": "cross-env NODE_ENV=development npx sequelize-cli db:seed:all",
    "openldap:dev:up": "docker compose -f ../docker-compose.yml up -d openldap",
    "openldap:dev:down": "docker compose -f ../docker-compose.yml down",
    "dev:setup": "npm run openldap:dev:up && npm run db:create:dev && npm run db:migrate:dev && npm run db:seed:dev",
    "dev:teardown": "npm run openldap:dev:down && npm run db:drop:dev",
    "dev:reset": "npm run dev:teardown && npm run dev:setup",
    "dev": "cross-env NODE_ENV=development node index.js",
    "start": "cross-env NODE_ENV=production node index.js"
  },
