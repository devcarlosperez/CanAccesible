    "bcrypt": "^6.0.0",
    "connect-session-sequelize": "^8.0.2",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "js-yaml": "^4.1.1",
