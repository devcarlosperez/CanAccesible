<!-- Header -->
<header class="shadow-md" style="background-color: #0c0c22;">
  <div class="max-w-7xl mx-auto px-6 py-4 flex flex-col md:flex-row justify-between items-center gap-4">
    <div class="flex items-center justify-center md:justify-start gap-4">
      <a href="<%= frontendUrl %>/home" class="hover:opacity-80 transition-opacity duration-300">
        <img src="/images/canaccesible-logo-2.webp" alt="CanAccesible Logo" class="h-12 cursor-pointer">
      </a>
    </div>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-3 md:gap-4">
      <h1 class="text-white text-sm sm:text-base md:text-lg font-semibold text-center">Hola, <%= user.firstName %> <%= user.lastName %></h1>
      <button onclick="window.location.href='<%= frontendUrl %>/home'" class="text-white px-4 py-2 rounded-lg transition cursor-pointer font-semibold hover:opacity-90 whitespace-nowrap" style="background-color: #ff312e;">
        Salir
      </button>
    </div>
  </div>
</header>
