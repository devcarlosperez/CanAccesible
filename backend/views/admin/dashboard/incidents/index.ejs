<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <title><%= title %></title>
</head>
<body class="bg-gray-200 min-h-screen">
  <%- include('../../../partials/header') %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <div class="mb-8">
      <div class="flex justify-between items-center mb-6">
        <a href="/dashboard-admin" class="text-neutral-500 hover:text-neutral-700 transition">
          <i class="fa-solid fa-arrow-left mr-2"></i> Volver al Dashboard
        </a>
        <button onclick="openCreateModal()" class="px-6 py-3 rounded-lg text-white font-semibold shadow-md hover:opacity-90 transition flex items-center gap-2" style="background-color: #004aad;">
          Nueva Incidencia
        </button>
      </div>
      <div class="text-center">
        <h2 class="text-2xl sm:text-3xl font-bold text-neutral-800">Gestión de Incidencias</h2>
        <p class="text-neutral-500 mt-1">Edita o elimina cualquier incidencia registrada</p>
      </div>
    </div>

    <div class="flex justify-center gap-2 mb-8">
      <button onclick="filterIncidents('all')" id="btn-all" class="filter-btn px-4 py-2 rounded-full text-sm font-semibold bg-[#004aad] text-white shadow-md transition">
        Todos
      </button>
      <button onclick="filterIncidents('approved')" id="btn-approved" class="filter-btn px-4 py-2 rounded-full text-sm font-semibold bg-white text-gray-600 hover:bg-gray-100 shadow-sm transition">
        Aprobadas
      </button>
      <button onclick="filterIncidents('pending')" id="btn-pending" class="filter-btn px-4 py-2 rounded-full text-sm font-semibold bg-white text-gray-600 hover:bg-gray-100 shadow-sm transition">
        No Aprobadas
      </button>
    </div>

    <% if (incidents.length === 0) { %>
      <div class="bg-white rounded-xl shadow-md p-12 text-center">
        <div class="text-6xl text-gray-300 mb-4">
          <i class="fa-solid fa-triangle-exclamation"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No hay incidencias registradas</h3>
        <p class="text-gray-500 mb-6">Comienza creando la primera incidencia.</p>
        <button onclick="openCreateModal()" class="inline-block px-6 py-2 rounded-lg text-white font-semibold hover:opacity-90 transition" style="background-color: #004aad;">
          Nueva Incidencia
        </button>
      </div>
    <% } else { %>
      <div class="w-full flex flex-col items-center">
        <div class="w-full max-w-sm md:max-w-4xl lg:max-w-6xl">
          <div id="incidentsContainer" class="flex flex-wrap gap-4 md:gap-6 justify-center">
            <% incidents.forEach(function(incident) { %>
              <div class="incident-item flex-[0_0_100%] md:flex-[0_0_calc(50%-12px)] lg:flex-[0_0_calc(33.333%-16px)] min-w-0" data-approved="<%= incident.isApproved %>">
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 h-full flex flex-col relative">
                  
                  <div class="absolute top-2 right-2 z-10 flex flex-col gap-1 items-end">
                    <% if (incident.isApproved) { %>
                      <span class="bg-green-500 text-white text-xs font-bold px-2 py-1 rounded shadow">Aprobada</span>
                    <% } else { %>
                      <span class="bg-yellow-500 text-white text-xs font-bold px-2 py-1 rounded shadow">Pendiente Aprobación</span>
                    <% } %>

                    <% if (incident.incidentStatusId == 1) { %>
                      <span class="bg-gray-500 text-white text-xs font-bold px-2 py-1 rounded shadow">Pendiente</span>
                    <% } else if (incident.incidentStatusId == 2) { %>
                      <span class="bg-blue-500 text-white text-xs font-bold px-2 py-1 rounded shadow">En Progreso</span>
                    <% } else if (incident.incidentStatusId == 3) { %>
                      <span class="bg-teal-500 text-white text-xs font-bold px-2 py-1 rounded shadow">Resuelta</span>
                    <% } %>
                  </div>

                  <div class="aspect-video md:aspect-square bg-gray-200 flex items-center justify-center overflow-hidden relative">
                    <img 
                      src="<%= incident.nameFile %>" 
                      alt="<%= incident.name %>" 
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    >
                  </div>
                  <div class="p-2 md:p-4 flex flex-col grow">
                    <h3 class="font-semibold text-sm md:text-lg line-clamp-2 text-gray-800 inline-block">
                      <%= incident.name %>
                    </h3>
                    <p class="text-xs md:text-sm text-gray-600 line-clamp-2 mt-1 md:mt-2 grow">
                      <%= incident.description %>
                    </p>
                    <div class="mt-3 pt-2 border-t border-gray-200 flex justify-between items-center">
                      <span class="text-xs text-gray-500">
                        <%= new Date(incident.dateIncident).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                      </span>
                      <div class="flex gap-2">
                        <button 
                          onclick="toggleIncidentApproval('<%= incident.id %>', <%= incident.isApproved %>)"
                          class="text-xs font-medium px-2 py-1 rounded text-white transition hover:opacity-80" 
                          style="background-color: <%= incident.isApproved ? '#ef4444' : '#22c55e' %>;" 
                          title="<%= incident.isApproved ? 'Desaprobar' : 'Aprobar' %>">
                          <i class="fa-solid <%= incident.isApproved ? 'fa-ban' : 'fa-check' %>"></i>
                        </button>
                        <button 
                          onclick="openEditModalFromData('<%= incident.id %>')"
                          class="text-xs font-medium px-2 py-1 rounded text-white transition hover:opacity-80" 
                          style="background-color: #f59e0b;" 
                          title="Editar">
                          <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                        <button onclick="deleteIncident('<%= incident.id %>')" class="text-xs font-medium px-2 py-1 rounded text-white transition hover:opacity-80" style="background-color: #ff312e;" title="Eliminar">
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
          <div id="paginationControls" class="flex justify-center gap-2 mt-8 flex-wrap"></div>
        </div>
      </div>
    <% } %>
  </div>

  <div id="incidentModal" class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-xl shadow-xl w-full max-w-lg relative max-h-[80vh] overflow-y-auto p-8">
      <button onclick="closeIncidentModal()" class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 text-xl">
        <i class="fa-solid fa-xmark"></i>
      </button>
      <form id="incidentForm" enctype="multipart/form-data">
        <h3 class="text-lg font-bold mb-4" id="modalTitle">Nueva Incidencia</h3>
        <input type="hidden" name="id" id="incidentId">
        <div class="mb-3">
          <label class="block text-sm font-medium mb-1">Nombre</label>
          <input type="text" name="name" id="incidentName" class="w-full border rounded px-3 py-2" required>
        </div>
        <div class="mb-3">
          <label class="block text-sm font-medium mb-1">Descripción</label>
          <textarea name="description" id="incidentDescription" class="w-full border rounded px-3 py-2" rows="3" required></textarea>
        </div>
        <div class="mb-3">
          <label class="block text-sm font-medium mb-1">Estado</label>
          <select name="incidentStatusId" id="incidentStatusId" class="w-full border rounded px-3 py-2" required>
            <option value="1">Pendiente</option>
            <option value="2">En Progreso</option>
            <option value="3">Resuelta</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="block text-sm font-medium mb-1">Tipo</label>
          <select name="incidentTypeId" id="incidentTypeId" class="w-full border rounded px-3 py-2" required>
            <option value="1">Buena Práctica</option>
            <option value="2">Mala Práctica</option>
          </select>
        </div>
        <div class="mb-3" id="severityContainer" style="display:none;">
          <label class="block text-sm font-medium mb-1">Severidad</label>
          <select name="incidentSeverityId" id="incidentSeverityId" class="w-full border rounded px-3 py-2">
            <option value="1">Baja</option>
            <option value="2">Media</option>
            <option value="3">Alta</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="block text-sm font-medium mb-1">Área</label>
          <select name="area" id="incidentArea" class="w-full border rounded px-3 py-2" required>
            <option value="">Selecciona un área</option>
            <option value="movilidad">movilidad</option>
            <option value="sensorial">sensorial</option>
            <option value="arquitectura">arquitectura</option>
            <option value="transporte">transporte</option>
            <option value="otro">otro</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="block text-sm font-medium mb-1">Ubicación</label>
          <div id="leafletMap" class="w-full h-64 rounded border"></div>
          <input type="hidden" name="latitude" id="incidentLatitude">
          <input type="hidden" name="longitude" id="incidentLongitude">
          <input type="hidden" name="island" id="incidentIsland">
          <div id="islandError" class="text-red-600 text-sm mt-2 hidden">
            No se pudo detectar correctamente la isla. Selecciona un punto válido en el mapa.
          </div>
        </div>
        <div class="mb-3">
          <label class="block text-sm font-medium mb-1">Fecha</label>
          <input type="date" name="dateIncident" id="incidentDateIncident" class="w-full border rounded px-3 py-2" required>
        </div>
        <div class="mb-3">
          <label class="block text-sm font-medium mb-1">Imagen</label>
          <input type="file" name="image" id="incidentImageFile" class="w-full border rounded px-3 py-2">
          <img id="incidentImagePreview" src="" alt="Vista previa" class="mt-2 rounded max-h-40 hidden">
        </div>
        <div class="mt-6 flex gap-2 justify-end">
          <button type="button" onclick="closeIncidentModal()" class="bg-gray-100 text-gray-700 px-4 py-2 rounded font-semibold hover:bg-gray-200 transition">
            Cancelar
          </button>
          <button type="submit" class="bg-[#004aad] text-white px-6 py-2 rounded font-semibold hover:opacity-90 transition">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    let currentFilter = 'all';
    let currentPage = 1;
    const itemsPerPage = 6;

    document.addEventListener('DOMContentLoaded', () => {
      renderIncidents();
    });

    function filterIncidents(filter) {
      currentFilter = filter;
      currentPage = 1;
      
      const buttons = document.querySelectorAll('.filter-btn');
      buttons.forEach(btn => {
        if(btn.id === `btn-${filter}`) {
          btn.classList.remove('bg-white', 'text-gray-600');
          btn.classList.add('bg-[#004aad]', 'text-white');
        } else {
          btn.classList.add('bg-white', 'text-gray-600');
          btn.classList.remove('bg-[#004aad]', 'text-white');
        }
      });

      renderIncidents();
    }

    function renderIncidents() {
      const items = Array.from(document.querySelectorAll('.incident-item'));
      
      // Filter
      const visibleItems = items.filter(item => {
        const isApproved = item.getAttribute('data-approved') === 'true';
        if (currentFilter === 'all') return true;
        if (currentFilter === 'approved') return isApproved;
        if (currentFilter === 'pending') return !isApproved;
        return true;
      });

      // Hide all
      items.forEach(item => item.style.display = 'none');

      // Pagination
      const totalPages = Math.ceil(visibleItems.length / itemsPerPage);
      
      if (currentPage > totalPages) currentPage = totalPages || 1;
      if (currentPage < 1) currentPage = 1;

      const start = (currentPage - 1) * itemsPerPage;
      const end = start + itemsPerPage;
      
      visibleItems.slice(start, end).forEach(item => item.style.display = 'block');

      renderPaginationControls(totalPages);
    }

    function renderPaginationControls(totalPages) {
      const container = document.getElementById('paginationControls');
      if (!container) return;
      
      container.innerHTML = '';

      if (totalPages <= 1) return;

      // Prev
      const prevBtn = document.createElement('button');
      prevBtn.innerHTML = '<i class="fa-solid fa-chevron-left"></i>';
      prevBtn.className = `px-3 py-1 rounded shadow-sm transition ${currentPage === 1 ? 'bg-gray-100 text-gray-400 cursor-not-allowed' : 'bg-white text-gray-600 hover:bg-gray-100'}`;
      prevBtn.onclick = () => { if (currentPage > 1) changePage(currentPage - 1); };
      container.appendChild(prevBtn);

      // Pages
      for (let i = 1; i <= totalPages; i++) {
        const btn = document.createElement('button');
        btn.innerText = i;
        btn.className = `px-3 py-1 rounded shadow-sm transition ${i === currentPage ? 'bg-[#004aad] text-white' : 'bg-white text-gray-600 hover:bg-gray-100'}`;
        btn.onclick = () => changePage(i);
        container.appendChild(btn);
      }

      // Next
      const nextBtn = document.createElement('button');
      nextBtn.innerHTML = '<i class="fa-solid fa-chevron-right"></i>';
      nextBtn.className = `px-3 py-1 rounded shadow-sm transition ${currentPage === totalPages ? 'bg-gray-100 text-gray-400 cursor-not-allowed' : 'bg-white text-gray-600 hover:bg-gray-100'}`;
      nextBtn.onclick = () => { if (currentPage < totalPages) changePage(currentPage + 1); };
      container.appendChild(nextBtn);
    }

    function changePage(page) {
      currentPage = page;
      renderIncidents();
      // Optional: scroll to top of list
      // document.getElementById('incidentsContainer').scrollIntoView({ behavior: 'smooth' });
    }

    let leafletMap, leafletMarker;

    function initLeafletMap(lat = 28.5, lng = -15.5, showMarker = false) {
      const canariasBounds = [
        [27.5, -18.5],
        [29.5, -13.0]
      ];

      if (leafletMap) leafletMap.remove();
      leafletMap = L.map('leafletMap', {
        center: [lat, lng],
        zoom: 8,
        minZoom: 7,
        maxZoom: 13,
        maxBounds: canariasBounds,
        maxBoundsViscosity: 1.0
      });

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
      }).addTo(leafletMap);

      if (showMarker) {
        leafletMarker = L.marker([lat, lng], { draggable: true }).addTo(leafletMap);
        document.getElementById('incidentLatitude').value = lat;
        document.getElementById('incidentLongitude').value = lng;
        updateMarkerPosition({ lat, lng });
        leafletMarker.on('dragend', async function(e) {
          const position = leafletMarker.getLatLng();
          await updateMarkerPosition(position);
        });
      } else {
        leafletMarker = null;
        document.getElementById('incidentLatitude').value = "";
        document.getElementById('incidentLongitude').value = "";
        document.getElementById('incidentIsland').value = "";
      }

      leafletMap.on('click', async function(e) {
        if (!leafletMarker) {
          leafletMarker = L.marker(e.latlng, { draggable: true }).addTo(leafletMap);
          leafletMarker.on('dragend', async function(ev) {
            const position = leafletMarker.getLatLng();
            await updateMarkerPosition(position);
          });
        }
        leafletMarker.setLatLng(e.latlng);
        await updateMarkerPosition(e.latlng);
      });
    }

    async function updateMarkerPosition(position) {
      document.getElementById('incidentLatitude').value = position.lat;
      document.getElementById('incidentLongitude').value = position.lng;
      const geo = await reverseGeocode(position.lat, position.lng);
      let postalCode = geo?.address?.postcode;
      let island = postalCode ? getIslandFromPostalCode(postalCode) : "Desconocida";
      document.getElementById('incidentIsland').value = island;
      showIslandError(island === "Desconocida");
    }

    function getIslandFromPostalCode(postalCode) {
      const code = parseInt(postalCode, 10);
      if (code >= 35000 && code <= 35999) return "Gran Canaria";
      if (code >= 35500 && code <= 35599) return "Lanzarote";
      if (code >= 35600 && code <= 35699) return "Fuerteventura";
      if (code >= 38000 && code <= 38999) return "Tenerife";
      if (code >= 38700 && code <= 38799) return "La Palma";
      if (code >= 38800 && code <= 38899) return "La Gomera";
      if (code >= 38900 && code <= 38999) return "El Hierro";
      return "Desconocida";
    }

    async function reverseGeocode(lat, lng) {
      try {
        const response = await fetch(`https://nominatim.openstreetmap.org/reverse?lat=${lat}&lon=${lng}&format=json&addressdetails=1`);
        const data = await response.json();
        return data;
      } catch (err) {
        return null;
      }
    }

    function showIslandError(show) {
      document.getElementById('islandError').classList.toggle('hidden', !show);
    }

    function openCreateModal() {
      document.getElementById('incidentModal').classList.remove('hidden');
      document.getElementById('modalTitle').innerText = "Nueva Incidencia";
      document.getElementById('incidentForm').reset();
      document.getElementById('incidentId').value = "";
      document.getElementById('incidentImagePreview').src = "";
      document.getElementById('incidentImagePreview').classList.add('hidden');
      document.getElementById('severityContainer').style.display = "none";
      showIslandError(false);
      setTimeout(() => initLeafletMap(28.5, -15.5, false), 200);
    }

    function openEditModalFromData(id) {
      axios.get(`/api/incidents/${id}`)
        .then(response => {
          const incident = response.data;
          document.getElementById('incidentModal').classList.remove('hidden');
          document.getElementById('modalTitle').innerText = "Editar Incidencia";
          document.getElementById('incidentId').value = incident.id || "";
          document.getElementById('incidentName').value = incident.name || "";
          document.getElementById('incidentDescription').value = incident.description || "";
          document.getElementById('incidentStatusId').value = incident.incidentStatusId || 1;
          document.getElementById('incidentTypeId').value = incident.incidentTypeId || 1;
          document.getElementById('incidentSeverityId').value = incident.incidentSeverityId || 1;
          document.getElementById('incidentArea').value = incident.area || "";
          document.getElementById('incidentDateIncident').value = incident.dateIncident ? incident.dateIncident.split("T")[0] : "";
          if (incident.incidentTypeId == 2) {
            document.getElementById('severityContainer').style.display = "block";
          } else {
            document.getElementById('severityContainer').style.display = "none";
          }
          if (incident.nameFile) {
            document.getElementById('incidentImagePreview').src = incident.nameFile;
            document.getElementById('incidentImagePreview').classList.remove('hidden');
          } else {
            document.getElementById('incidentImagePreview').src = "";
            document.getElementById('incidentImagePreview').classList.add('hidden');
          }
          showIslandError(false);
          setTimeout(() => {
            initLeafletMap(
              incident.latitude || 28.5,
              incident.longitude || -15.5,
              !!incident.latitude && !!incident.longitude
            );
          }, 200);
        })
        .catch(error => {
          alert('Error cargando la incidencia');
        });
    }

    function closeIncidentModal() {
      document.getElementById('incidentModal').classList.add('hidden');
    }

    document.getElementById('incidentTypeId').addEventListener('change', function() {
      if (this.value == "2") {
        document.getElementById('severityContainer').style.display = "block";
      } else {
        document.getElementById('severityContainer').style.display = "none";
      }
    });

    document.getElementById('incidentImageFile').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(ev) {
          document.getElementById('incidentImagePreview').src = ev.target.result;
          document.getElementById('incidentImagePreview').classList.remove('hidden');
        };
        reader.readAsDataURL(file);
      } else {
        document.getElementById('incidentImagePreview').src = "";
        document.getElementById('incidentImagePreview').classList.add('hidden');
      }
    });

    document.getElementById('incidentForm').addEventListener('submit', function(e) {
      e.preventDefault();

      const island = document.getElementById('incidentIsland').value;
      if (!island || island === "Desconocida") {
        showIslandError(true);
        return;
      }
      showIslandError(false);

      const id = document.getElementById('incidentId').value;
      const formData = new FormData(this);

      const typeId = document.getElementById('incidentTypeId').value;
      if (typeId == "1") {
        formData.delete('incidentSeverityId');
      }

      const imageInput = document.getElementById('incidentImageFile');
      if (!imageInput.files.length) {
        formData.delete('image');
      }

      const url = id ? `/api/incidents/${id}` : '/api/incidents';
      const method = id ? 'put' : 'post';
      
      axios[method](url, formData, { withCredentials: true })
        .then(response => {
          closeIncidentModal();
          window.location.reload();
        })
        .catch(error => {
          console.error(error);
          if (error.response && error.response.status === 403) {
            alert('No tienes permisos para realizar esta acción o tu sesión ha expirado.');
          } else {
            alert('Error guardando la incidencia: ' + (error.response?.data?.message || error.message));
          }
        });
    });

    function deleteIncident(id) {
      if (confirm('¿Estás seguro de que deseas eliminar esta incidencia?')) {
        axios.delete(`/api/incidents/${id}`)
          .then(response => {
            window.location.reload();
          })
          .catch(error => {
            alert('Error eliminando la incidencia');
          });
      }
    }

    function toggleIncidentApproval(id, currentStatus) {
      const newStatus = !currentStatus;
      const action = newStatus ? 'aprobar' : 'desaprobar';
      
      axios.put(`/api/incidents/${id}`, { isApproved: newStatus })
        .then(response => {
          window.location.reload();
        })
        .catch(error => {
          console.error(error);
          alert(`Error al ${action} la incidencia: ` + (error.response?.data?.message || error.message));
        });
    }
  </script>
</body>
</html>